
@model IEnumerable<TrabalhoFinalAcademiaNet.ViewModel.VendaDetalhesViewModel>

@{
    ViewData["Title"] = "Envios";
}

<h1>Envios</h1>

@* <p>
    <a class="btn btn-primary" asp-action="Create">Adicionar Entrega</a>
</p> *@

<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.StatusEntrega)
            <th>
                @Html.DisplayNameFor(model => model.NomeItem)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClienteNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataVenda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalVenda)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusEntrega)
                </td>
                <td>
                @Html.DisplayFor(modelItem => item.NomeItem)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClienteNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataVenda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Endereco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalVenda)
                </td>

                <td>
@*                     <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.VendaId">Alterar</a> | *@
                    <a asp-action="Details" class="btn btn-primary" asp-route-id="@item.VendaId">Detalhes</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.VendaId">Cancelar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        let table = new DataTable('#myTable');
    </script>
}

